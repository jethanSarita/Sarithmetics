<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/employee_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_up">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Employee"
            android:textAlignment="center"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/epTvEmployeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Employee Name"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="34sp"/>

        <TextView
            android:id="@+id/epTvEmployeeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Employee Status"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <RadioGroup
            android:id="@+id/epRbEmpType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/epRbEmpTypeNorm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Standard"
                android:textColor="@color/colorTextPrimary"
                android:textColorLink="@color/colorTextPrimary"
                app:buttonTint="@color/button"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/epRbEmpTypeInv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inventory Manager"
                android:textColor="@color/colorTextPrimary"
                android:textColorLink="@color/colorTextPrimary"
                app:buttonTint="@color/button"
                android:textStyle="bold" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/epBtnDismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:text="Dismiss" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/epBtnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:text="Update" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/epBtnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:text="Close" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>